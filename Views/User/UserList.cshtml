@using System.Data;
@model System.Data.DataTable;

<div class="pagetitle">
    <h1 class="text-center">User List</h1>
    @* <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">User</li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </nav> *@
</div><!-- End Page Titl-->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">

                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            @TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }
                    @if (TempData["ErrorMessage"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["ErrorMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    <h5 class="card-title"></h5>

                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-striped table-hover table-bordered align-middle">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>UserID</th>
                                    <th>UserName</th>
                                    <th>Password</th>
                                    <th>Email</th>
                                    <th>MobileNo</th>
                                    <th>IsActive</th>
                                    @* <th>Created</th>
                                    <th>Modified</th> *@
                                    <th>Edit/Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td>@dr["UserID"]</td>
                                        <td>@dr["UserName"]</td>
                                        <td>@dr["Password"]</td>
                                        <td>@dr["Email"]</td>
                                        <td>@dr["MobileNo"]</td>
                                        <td>@dr["IsActive"]</td>
                                        @* <td>@Convert.ToDateTime(dr["Created"]).ToString("dd/MM/yyyy")</td>
                                        <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd/MM/yyyy")</td> *@
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("UserAddEdit", "User", new { UserID = dr["UserID"] })"
                                                   class="btn btn-outline-primary btn-sm"
                                                   title="Edit User">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-outline-danger btn-sm delete-user"
                                                        data-id="@dr["UserID"]"
                                                        title="Delete User">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".delete-user").forEach(button => {
            button.addEventListener("click", function () {
                const userId = this.getAttribute("data-id");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect to controller delete action
                        window.location.href = `/User/UserDelete?UserID=${userId}`;
                    }
                });
            });
        });
    });
</script>