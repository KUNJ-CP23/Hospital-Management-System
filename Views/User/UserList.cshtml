

@using System.Data;
@model System.Data.DataTable;

<style>
    body {
        font-family: 'Segoe UI', Arial, sans-serif;
    }

    .userlist-header {
        background-color: white;
        padding: 15px;
        margin-bottom: 20px;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    .userlist-title {
        color: #3399ff; /* Light Blue */
        margin: 0;
    }

    .table thead {
        background-color: #006bb3; /* Darker shade of light blue */
        color: white;
    }

    .btn-space {
        margin-right: 5px;
    }
</style>

<div class="pagetitle userlist-header">
    <h1 class="userlist-title">User List</h1>
    <div>
        <a href="@Url.Action("UserAddEdit", "User")" class="btn btn-primary opacity-75 btn-space">
            <i class="bi bi-plus-circle"></i> Add User
        </a>
        <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary">
            <i class="bi bi-speedometer2"></i> Dashboard
        </a>
    </div>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                <table class="table table-striped table-hover table-bordered align-middle">
                    <thead class="text-center">
                        <tr>
                            <th>UserID</th>
                            <th>UserName</th>
                            <th>Password</th>
                            <th>Email</th>
                            <th>MobileNo</th>
                            <th>IsActive</th>
                            <th>Edit/Delete</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (DataRow dr in Model.Rows)
                        {
                            <tr>
                                <td>@dr["UserID"]</td>
                                <td>@dr["UserName"]</td>
                                <td>@dr["Password"]</td>
                                <td>@dr["Email"]</td>
                                <td>@dr["MobileNo"]</td>
                                <td>@dr["IsActive"]</td>
                                <td class="text-center">
                                    <a href="@Url.Action("UserAddEdit", "User", new { UserID = dr["UserID"] })"
                                       class="btn btn-primary btn-sm btn-space"
                                       title="Edit User">
                                        <i class="bi bi-pencil-fill"></i>
                                    </a>
                                    <button type="button"
                                            class="btn btn-danger btn-sm delete-user"
                                            data-id="@dr["UserID"]"
                                            title="Delete User">
                                        <i class="bi bi-trash-fill"></i>
                                    </button>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

        </div>
    </div>
</section>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".delete-user").forEach(button => {
            button.addEventListener("click", function () {
                const userId = this.getAttribute("data-id");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/User/UserDelete?UserID=${userId}`;
                    }
                });
            });
        });
    });
</script>
