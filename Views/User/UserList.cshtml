@using System.Data;
@model System.Data.DataTable;

<style>
    body {
        font-family: 'Segoe UI', Arial, sans-serif;
        background-color: #f5f7fa; /* Soft light grey background */
    }

    /* Header section */
    .userlist-header {
        background-color: white;
        padding: 15px;
        margin-bottom: 10px;
        border-radius: 8px;
        display: flex;
        justify-content: space-between;
        align-items: center;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.05);
    }

    .userlist-title {
        color: #3399ff;
        
        text-align: center;
    }

    /* Buttons container (below header) */
    .action-buttons {
        margin-bottom: 15px;
        display: flex;
        gap: 8px;
        margin-inline-start:77%;
    }

    /* Smaller, rounded buttons */
    .btn-custom {
        padding: 4px 10px;
        font-size: 13px;
        border-radius: 20px;
    }

    /* Table styling */
    /* .table-container {
        background-color: #e6f2ff;
        border-radius: 8px;
        padding: 10px;
        box-shadow: 0px 2px 6px rgba(0,0,0,0.05);
    } */

    .table thead {
        background-color: #e9ecef; /* Professional light grey */
        color: #333;
        font-weight: 600;
    }

    .table th, .table td {
        text-align: center;
        vertical-align: middle;
    }

    /* Scrollable table */
    .table-responsive {
        max-height: 500px;
        overflow-y: auto;
    }
</style>

<div class="pagetitle userlist-header">
    <h1 class="userlist-title text-center">User List</h1>
</div>

<!-- Action Buttons BELOW header -->
<div class="action-buttons">
    <a href="@Url.Action("UserAddEdit", "User")" class="btn btn-primary btn-custom">
        <i class="bi bi-plus-circle"></i> Add User
    </a>
    <a href="@Url.Action("Dashboard", "Home")" class="btn btn-secondary btn-custom">
        <i class="bi bi-speedometer2"></i> Dashboard
    </a>
</div>

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="table-container">
                <div class="table-responsive">
                    <table class="table table-striped table-hover table-bordered align-middle">
                        <thead>
                            <tr>
                                <th>UserID</th>
                                <th>UserName</th>
                                <th>Password</th>
                                <th>Email</th>
                                <th>MobileNo</th>
                                <th>IsActive</th>
                                <th>Edit/Delete</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    <td>@dr["UserID"]</td>
                                    <td>@dr["UserName"]</td>
                                    <td>@dr["Password"]</td>
                                    <td>@dr["Email"]</td>
                                    <td>@dr["MobileNo"]</td>
                                    <td>@dr["IsActive"]</td>
                                    <td>
                                        <a href="@Url.Action("UserAddEdit", "User", new { UserID = dr["UserID"] })"
                                           class="btn btn-primary btn-sm btn-custom"
                                           title="Edit User">
                                            <i class="bi bi-pencil-fill"></i>
                                        </a>
                                        <button type="button"
                                                class="btn btn-danger btn-sm btn-custom delete-user"
                                                data-id="@dr["UserID"]"
                                                title="Delete User">
                                            <i class="bi bi-trash-fill"></i>
                                        </button>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>

        </div>
    </div>
</section>

<!-- SweetAlert2 -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".delete-user").forEach(button => {
            button.addEventListener("click", function () {
                const userId = this.getAttribute("data-id");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        window.location.href = `/User/UserDelete?UserID=${userId}`;
                    }
                });
            });
        });
    });
</script>
