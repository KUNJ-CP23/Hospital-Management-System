@using System.Data;
@model System.Data.DataTable;

<div class="pagetitle">
    <h1>Appointment List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Appointment</li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Datatables</h5>
                    <table>
                        <thead>
                            <tr>
                                <th>AppointmentId</th>
                                <th>AppointmentDate</th>
                                <th>AppointmentStatus</th>
                                <th>Description</th>
                                <th>SpecialRemarks</th>
                                <th>Created</th>
                                <th>Modified</th>
                                <th>TotalConsultedAmount</th>
                                <th>PatientName</th>
                                <th>DoctorName</th>
                                <th>UserName</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (DataRow dr in Model.Rows)
                            {
                                <tr>
                                    <td>@dr["AppointmentId"]</td>
                                    <td>@dr["AppointmentDate"]</td>
                                    <td>@dr["AppointmentStatus"]</td>
                                    <td>@dr["Description"]</td>
                                    <td>@dr["SpecialRemarks"]</td>
                                    <td>@dr["Created"]</td>
                                    <td>@dr["Modified"]</td>
                                    <td>@dr["TotalConsultedAmount"]</td>
                                    <td>@dr["PatientName"]</td>
                                    <td>@dr["DoctorName"]</td>
                                    <td>@dr["UserName"]</td>
                                </tr>
                            }
                        </tbody>
                    </table>
                    <!-- End Table with stripped rows -->

                </div>
            </div>

        </div>
    </div>
</section>
