@using System.Data;
@model System.Data.DataTable;

<div class="pagetitle">
    <h1>Department List</h1>
    <nav>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="index.html">Home</a></li>
            <li class="breadcrumb-item">Department</li>
            <li class="breadcrumb-item active">List</li>
        </ol>
    </nav>
</div><!-- End Page Title -->

<section class="section">
    <div class="row">
        <div class="col-lg-12">

            <div class="card">
                <div class="card-body">
                    <h5 class="card-title">Department Table</h5>

                    <div class="table-responsive" style="max-height: 500px; overflow-y: auto;">
                        <table class="table table-striped table-hover table-bordered align-middle">
                            <thead class="table-dark text-center">
                                <tr>
                                    <th>DepartmentID</th>
                                    <th>DepartmentName</th>
                                    <th>Description</th>
                                    <th>IsActive</th>
                                    <th>UserId</th>
                                    <th>UserName</th>
                                    <th>Edit/Delete</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (DataRow dr in Model.Rows)
                                {
                                    <tr>
                                        <td>@dr["DepartmentID"]</td>
                                        <td>@dr["DepartmentName"]</td>
                                        <td>@dr["Description"]</td>
                                        <td>@dr["IsActive"]</td>
                                        <td>@dr["UserID"]</td>
                                        @* <td>@Convert.ToDateTime(dr["Created"]).ToString("dd/MM/yyyy")</td>
                                        <td>@Convert.ToDateTime(dr["Modified"]).ToString("dd/MM/yyyy")</td> *@
                                        <td>@dr["UserName"]</td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="@Url.Action("DepartmentAddEdit", "Department", new { DepartmentID = dr["DepartmentID"] })"
                                                   class="btn btn-outline-primary btn-sm"
                                                   title="Edit Department">
                                                    <i class="bi bi-pencil-fill"></i>
                                                </a>
                                                <button type="button"
                                                        class="btn btn-outline-danger btn-sm delete-department"
                                                        data-id="@dr["DepartmentID"]"
                                                        title="Delete Department">
                                                    <i class="bi bi-trash-fill"></i>
                                                </button>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>

        </div>
    </div>
</section>

<!-- SweetAlert2 CDN -->
<script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

<script>
    document.addEventListener("DOMContentLoaded", function () {
        document.querySelectorAll(".delete-department").forEach(button => {
            button.addEventListener("click", function () {
                const departmentId = this.getAttribute("data-id");

                Swal.fire({
                    title: "Are you sure?",
                    text: "You won't be able to revert this!",
                    icon: "warning",
                    showCancelButton: true,
                    confirmButtonColor: "#3085d6",
                    cancelButtonColor: "#d33",
                    confirmButtonText: "Yes, delete it!"
                }).then((result) => {
                    if (result.isConfirmed) {
                        // Redirect to controller delete action
                        window.location.href = `/Department/DepartmentDelete?DepartmentID=${departmentId}`;
                    }
                });
            });
        });
    });
</script>

